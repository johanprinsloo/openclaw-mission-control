# Mission Control Configuration
# Copy this to .env and update values as needed.

# Deployment mode: single-tenant | multi-tenant
MC_DEPLOYMENT_MODE=single-tenant

# Database (PostgreSQL)
MC_DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/mission_control

# Redis
MC_REDIS_URL=redis://localhost:6379/0

# Security
MC_SECRET_KEY=CHANGE_ME_GENERATE_A_SECURE_KEY
MC_JWT_ALGORITHM=HS256
MC_JWT_EXPIRE_MINUTES=60

# OIDC - GitHub (optional)
MC_GITHUB_CLIENT_ID=
MC_GITHUB_CLIENT_SECRET=

# OIDC - Google (optional)
MC_GOOGLE_CLIENT_ID=
MC_GOOGLE_CLIENT_SECRET=

# Server
MC_HOST=0.0.0.0
MC_PORT=8000
MC_DEBUG=false

# CORS (comma-separated origins)
MC_CORS_ORIGINS=["http://localhost:5173"]
